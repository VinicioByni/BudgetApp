<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BudgetApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Cards.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Tiles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Buttons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/CreditCards.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/FormElements.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/BudgetApp.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
</head>
<body >
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid main-col my-3">

                <a class="navbar-brand text-color ms-3 align-self-center" style="font-weight: 600" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-piggy-bank align-self-center" style="font-size: 20px;"></i> BudgetApp</a>  
                <div class="navbar-collapse collapse flex-md-grow-1 align-self-center">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-color" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-color" asp-area="" asp-controller="Home" asp-action="AccountsAndDebts">Accounts & Debts</a>
                        </li>
                    </ul>
                </div>
                <button class="navbar-toggler btnMain ms-auto" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>     
                <button id="dark-mode-toggle" class="btn-general mx-3" aria-label="dark mode toggle btn">
                    <i class="bi bi-brightness-high-fill"></i>
                </button>
            </div>
        </nav>
    </header>
    <div class="container-fluid mb-0 p-0">
        <main role="main" class="pb-0 mb-0">
            @RenderBody()
        </main>
    </div>
    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
