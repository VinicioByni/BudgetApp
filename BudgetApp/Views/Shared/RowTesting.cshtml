@using BudgetApp.Models
@model FormsViewModel

@{
    ViewBag.Title = "RowTesting";
    DateTime currentDate = DateTime.Now;
    string today = currentDate.ToString("dd-MMMM-yyyy");

}

<!-- Main Page -->
<div class="container-fluid">
    <!-- Expense -->
    <div id="expense" class="card mt-2 me-2 ms-2 text-light border-danger formClass">
        <div class="card-header bg-danger text-light">
            <h4 class="mb-0"><i class="bi bi-coin"></i> Expense</h4>
        </div>
        <div class="card-body">
            <form class="m-3" asp-controller="Expense" asp-action="Add" method="post">
                <div class="form-group mb-2">
                    <label class="form-label">Amount</label>
                    <input type="number" class="form-control" asp-for="Expense.Amount" required>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label">Date</label>
                    <input type="date" class="form-control" asp-for="Expense.Date" required>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label">Description</label>
                    <input type="text" class="form-control" asp-for="Expense.Description">
                    <small class="form-text text-light">
                        (40 character limit).
                    </small>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label">Category</label>
                    <select class="form-select my-1 mr-sm-2 bg-blueform" asp-for="Expense.ExpenseCategoryId" required>
                        <option value="" selected>Select Category</option>
                        @foreach (ExpenseCategory expenseCategory in Model.ExpenseCategories)
                        {
                            <option value="@expenseCategory.ExpenseCategoryId">@expenseCategory.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group mb-2">
                    <label class="form-label">Payment Method</label>
                    <select class="form-select my-1 mr-sm-2" id="expenseMethod" asp-for="Expense.Method" required>
                        <option value="" selected>Select Method</option>
                        <option value="Cash/Debit">Cash/Debit</option>
                        <option value="Credit Card">Credit Card</option>
                        <option value="Debt">Debt</option>
                    </select>
                </div>
                <div class="form-group mb-2" id="expenseAccount">
                    <label class="form-label">Account</label>
                    <select class="form-select my-1 mr-sm-2" id="selectAccount" asp-for="Expense.AccountId">
                        <option value="" selected>Select Account</option>
                        @foreach (Account account in Model.Accounts)
                        {
                            <option value="@account.AccountId">@account.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group mb-2" id="expenseCreditCard">
                    <label class="form-label">Credit Card</label>
                    <select class="form-select my-1 mr-sm-2" id="selectCreditCard" asp-for="Expense.CreditCardId">
                        <option value="" selected>Select Credit Card</option>
                        @foreach (CreditCard creditCard in Model.CreditCards)
                        {
                            <option value="@creditCard.CreditCardId">@creditCard.Name</option>
                        }
                    </select>
                    <button onclick="createCreditCard()" class="btn btn-outline-light mt-2">+ Add Credit Card</button>
                </div>

                <div class="form-group mb-2" id="expenseDebt">
                    <label class="form-label">Type of Debt</label>
                    <div class="form-check text-start">
                        <input class="form-check-input" name="expenseDebtRadio" type="radio" id="expenseBorrowed" value="Borrowed" checked>
                        <label class="form-check-label" for="expenseBorrowed">Borrowed</label>
                    </div>
                    <div class="form-check text-start">
                        <input class="form-check-input" name="expenseDebtRadio" type="radio" id="expenseLent" value="Lent">
                        <label class="form-check-label" for="expenseLent">Lent</label>
                    </div>
                    <label class="form-label">Debt with:</label>
                    <select class="form-select my-1 mr-sm-2" id="selectDebt" asp-for="Expense.DebtId">
                        <option value="" selected>Select</option>
                        @foreach (Debt debt in Model.Debts)
                        {
                            <option value="@debt.DebtId">@debt.Entity</option>
                        }
                    </select>
                    <button class="btn btn-outline-info mt-2">+ Add Entity</button>
                </div>

                <button type="submit" class="btn btn-danger text-light">Submit</button>
            </form>
        </div>

    </div>
    <!-- Recurrent Expense -->
    <div id="recurrent_expense" class="card mt-2 me-2 ms-2  text-light border-danger formClass">
        <div class="card-header bg-danger text-light">
            <h4 class="mb-0"><i class="bi bi-coin"></i>Recurrent Expense</h4>
        </div>
        <form class="m-3">
            <div class="form-group mb-2">
                <label class="form-label">
                    Amount
                </label>
                <input type="number" class="form-control" required placeholder="$...">
            </div>

            <div class="btn-group mb-2">

                <input type="radio" class="btn-check" onclick="periodChange(1)" name="options" id="Monthly" autocomplete="off" checked>
                <label class="btn btn-outline-secondary" for="Monthly">Monthly</label>

                <input type="radio" class="btn-check" onclick="periodChange(2)" name="options" id="Weekly" autocomplete="off">
                <label class="btn btn-outline-secondary" for="Weekly">Weekly</label>

                <input type="radio" class="btn-check" onclick="periodChange(3)" name="options" id="Daily" autocomplete="off">
                <label class="btn btn-outline-secondary" for="Daily">Daily</label>
            </div>
            <div class="form-group mb-2" id="dateOfTheMonth">
                <label class="form-label">Date of the Month</label>
                <input type="date" class="form-control" required>
            </div>
            <div class="form-group mb-2" id="dayOfTheWeek">
                <label class="form-label">Day of the Week</label>
                <select class="form-select  mr-sm-2" required>
                    <option value="" selected>Select Day</option>
                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>
                    <option value="6">Saturday</option>
                    <option value="7">Sunday</option>
                </select>
            </div>
            <div class="form-group mb-2">
                <label class="form-label">Description</label>
                <input type="text" class="form-control">
                <small class="form-text text-light">
                    (40 character limit).
                </small>
            </div>
            <div class="form-group mb-2">
                <label class="form-label">Category</label>
                <select class="form-select my-1 mr-sm-2" required>
                    <option value="" selected>Select Category</option>
                    <option value="1">House</option>
                    <option value="2">Gym</option>
                    <option value="3">Food</option>
                </select>
            </div>

            <div class="form-group mb-2">
                <label class="form-label">Payment Method</label>
                <select class="form-select my-1 mr-sm-2" id="recurrentExpenseMethod" required>
                    <option value="" selected>Select Method</option>
                    <option value="1">Cash/Debit</option>
                    <option value="2">Credit Card</option>
                    <option value="3">Debt</option>
                </select>
            </div>
            <div class="form-group mb-2" id="recurrentExpenseAccount">
                <label class="form-label">Account</label>
                <select class="form-select my-1 mr-sm-2" id="recurrentExpenseSelectAccount">
                    <option value="" selected>Select Account</option>
                    <option value="1">BBVA</option>
                    <option value="2">Hey Banco</option>
                </select>
            </div>
            <div class="form-group mb-2" id="recurrentExpenseCreditCard">
                <label class="form-label">Credit Card</label>
                <select class="form-select my-1 mr-sm-2" id="recurrentExpenseSelectCreditCard">
                    <option value="" selected>Select Credit Card</option>
                    <option value="1">Story</option>
                    <option value="2">Hey Banco</option>
                </select>
                <button class="btn btn-outline-light mt-2">+ Add Credit Card</button>
            </div>

            <div class="form-group mb-2" id="recurrentExpenseDebt">
                <label class="form-label">Type of Debt</label>
                <div class="form-check text-start" id="recurrentExpenseDebt">
                    <input class="form-check-input" name="recurrentExpenseDebtRadio" type="radio" id="recurrentExpenseBorrowed" value="1" checked>
                    <label class="form-check-label" for="recurrrentExpenseBorrowed">
                        Borrowed
                    </label>
                </div>
                <div class="form-check text-start" id="recurrentExpenseDebt">
                    <input class="form-check-input" name="recurrentExpenseDebtRadio" type="radio" id="recurrentExpenseLent" value="2">
                    <label class="form-check-label" for="recurrentExpenseLent">
                        Lent
                    </label>
                </div>
                <label class="form-label">Debt with:</label>
                <select class="form-control my-1 mr-sm-2" id="recurrentExpenseSelectDebt">
                    <option value="" selected>Select</option>
                    <option value="1">Mom</option>
                    <option value="2">Brother</option>
                </select>
                <button class="btn btn-outline-light mt-2">+ Add Entity</button>
            </div>

            <button type="submit" class="btn btn-danger text-light">Submit</button>
        </form>
    </div>
</div>


<script src="~/js/mainPage/mainForms.js"></script>
<script src="~/js/mainPage/Expense.js"></script>
<script src="~/js/mainPage/RecurrentExpense.js"></script>
